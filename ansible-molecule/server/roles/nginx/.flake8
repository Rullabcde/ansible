[flake8]
max-line-length = 120

max-complexity = 10

ignore = 
    E501,
    W503,
    E203,


exclude = 
    .git,
    __pycache__,
    .cache,
    .pytest_cache,
    .tox,
    venv,
    env,
    .venv,
    .env,
    build,
    dist,
    *.egg-info,
    .vagrant,
    node_modules,
    .ansible,
    *.retry,
    tests/test_*.py,
    molecule/*/tests/


per-file-ignores = 
    __init__.py:F401,
    test_*.py:E501,F401,F811,
    **/tests/*.py:E501,F401,F811,
    molecule/*/tests/test_*.py:E501,F401,F811,
    setup.py:E501,
    config.py:E501,
    settings.py:E501

statistics = True

show-source = True

show-pep8 = True

count = True

format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s

benchmark = False

doctests = True

application-import-names = 
    ansible,
    molecule,
    testinfra